{% extends 'base.html.twig' %}

{% block title %}Jobiz{% endblock %}

{% block body %}

<!-- HERO SECTION -->
<section class="hero-banner">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">

<p class="mb-4">
    <span id="job-counter" class="display-3 fw-bold" style="color:#11999e;" data-count="{{ jobCount }}">0</span>
    <span class="display-3 fw-bold text-light ms-2">Jobs available!</span>
</p>  
                

                <h1 class="display-3 fw-bold mb-3">
                    You can choose your dream job
                </h1>

<h1 class="display-5 text-light mb-3" id="typed-text"></h1>

                <div class="d-flex justify-content-center">
                    <div class="search-container d-flex align-items-center">
                        <div class="search-wrapper">
                            <span class="search-icon">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" class="form-control search-input"
                                   placeholder="Enter job title, company, or keywordâ€¦">
                        </div>
                        <button class="btn btn-success rounded px-5 ms-2">
                            Search
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<!-- FEATURED JOBS SECTION -->
<section class="featured-jobs">
<div class="container py-5">

    <h2 class="text-center mb-5 text-secondary">Featured Jobs</h2>

    <div class="row g-4">

        {% for job in jobs %}
            <div class="col-md-4">

                <div class="card job-card h-100 shadow-sm">

                    <!-- Random Office Image -->
                    <div class="card-img-container">
                        {% set officeImages = [
                            asset('images/1stpic.jpg'),
                            asset('images/2ndpic.jpg'),
                            asset('images/3rdpic.jpg')
                        ] %}
                        <img src="{{ officeImages[loop.index0 % officeImages|length] }}"
                             class="card-img-top"
                             alt="Office Image">
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-4 d-flex flex-column">

                        <!-- Job Title -->
                        <h5 class="card-title">{{ job.title }}</h5>

                        <!-- Location + Badge -->
                        <div class="d-flex align-items-center mb-2">
                            <span class="location me-2">
                                <i class="bi bi-geo-alt-fill"></i>
                                {{ job.city }}, {{ job.country }}
                            </span>

                            {% if job.remoteAllowed %}
                                <span class="badge badge-remote">REMOTE</span>
                            {% else %}
                                <span class="badge badge-onsite">ONSITE</span>
                            {% endif %}
                        </div>

                        <!-- Salary -->
                        {% if job.salaryMin and job.salaryMax %}
                            <p class="text-success mb-2">
                                ${{ job.salaryMin|number_format(0, '.', ',') }}
                                -
                                ${{ job.salaryMax|number_format(0, '.', ',') }}
                            </p>
                        {% endif %}

                        <!-- Description -->
                        <p class="description mb-3 flex-grow-1">
                            {{ job.description|slice(0, 100) ~ '...' }}
                        </p>

                        <!-- Apply Button -->
                        <div class="mt-auto">
                            <a href="{{ path('app_jobapplication', {'id': job.id}) }}"
                               class="btn btn-jobstock w-100">
                                <i class="bi bi-send me-1"></i> Apply Now
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        {% endfor %}

    </div>
</div>
</section>

<!-- how does it work section -->

<section class="how-it-works">
    <div class="container text-center">

        <h2 class="fw-bold mb-3">How It Work?</h2>
        <p class="text-muted mb-5">
            Many desktop publishing packages and web page editors
        </p>

        <div class="row justify-content-center g-4">

            <!-- Step 1 -->
            <div class="col-lg-3 col-md-6">
                <div class="step-box">
                    <div class="icon-wrapper">
                        <div class="icon-inner">
                            <i class="bi bi-person"></i>
                        </div>
                    </div>
                    <i class="bi bi-arrow-right arrow"></i>
                    <h5 class="fw-bold">Create an Account</h5>
                    <p class="text-muted">
                        Sign up in minutes and build your professional profile to start exploring thousands of job opportunities.
                    </p>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="col-lg-3 col-md-6">
                <div class="step-box">
                    <div class="icon-wrapper">
                        <div class="icon-inner">
                            <i class="bi bi-file-earmark-text"></i>
                        </div>
                    </div>
                    <i class="bi bi-arrow-right arrow"></i>
                    <h5 class="fw-bold">CV/Resume</h5>
                    <p class="text-muted">
                        Add your resume to showcase your skills, experience, and qualifications to top employers.
                    </p>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="col-lg-3 col-md-6">
                <div class="step-box">
                    <div class="icon-wrapper">
                        <div class="icon-inner">
                            <i class="bi bi-search"></i>
                        </div>
                    </div>
                    <i class="bi bi-arrow-right arrow"></i>
                    <h5 class="fw-bold">Find Your Job</h5>
                    <p class="text-muted">
                        Search and filter jobs by category, location, or company to find the perfect match for your career goals.
                    </p>
                </div>
            </div>

            <!-- Step 4 -->
            <div class="col-lg-3 col-md-6">
                <div class="step-box">
                    <div class="icon-wrapper">
                        <div class="icon-inner">
                            <i class="bi bi-send"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold">Save & Apply</h5>
                    <p class="text-muted">
                        Save interesting jobs and apply instantly with just one click to speed up your hiring process.
                    </p>
                </div>
            </div>

        </div>

    </div>
</section>
<!-- end of how does it work section -->

{% endblock %}