{% extends 'base.html.twig' %}

{% block title %}Jobiz{% endblock %}

{% block body %}

<!-- HERO SECTION -->
<section class="hero-banner">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">

                <div class="badge-hot mb-3">Job List</div>

                <h1 class="display-3 fw-bold mb-3">
                    Search Smarter. Work Better.<br>Live Happier.
                </h1>

                <p id="typed-text" class="lead text-light mb-4"></p>

<script>
const sentences = [
    "Getting a new job is never easy.",
    "Check what new jobs we have in store for you on Job Stock.",
    "Your dream job might be just one click away!"
];

let i = 0, j = 0, currentSentence = '', isDeleting = false;
const typingSpeed = 100, pauseTime = 1000;

function type() {
    const typedText = document.getElementById('typed-text');
    if (!typedText) return;

    if (!isDeleting) {
        currentSentence = sentences[i].substring(0, j + 1);
        typedText.textContent = currentSentence;
        j++;
        if (j === sentences[i].length) { isDeleting = true; setTimeout(type, pauseTime); return; }
    } else {
        currentSentence = sentences[i].substring(0, j - 1);
        typedText.textContent = currentSentence;
        j--;
        if (j === 0) { isDeleting = false; i = (i + 1) % sentences.length; }
    }
    setTimeout(type, typingSpeed);
}

document.addEventListener('DOMContentLoaded', type);
</script>

                <div class="d-flex justify-content-center">
                    <div class="search-container d-flex align-items-center">
                        <div class="search-wrapper">
                            <span class="search-icon">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text" class="form-control search-input"
                                   placeholder="Enter job title, company, or keywordâ€¦">
                        </div>
                        <button class="btn btn-jobstock rounded px-5 ms-2">
                            Search
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<!-- FEATURED JOBS SECTION -->
<section class="featured-jobs">
<div class="container py-5">

    <h2 class="text-center mb-5 text-secondary">Featured Jobs</h2>

    <div class="row g-4">

        {% for job in jobs %}
            <div class="col-md-4">

                <div class="card job-card h-100 shadow-sm">

                    <!-- Random Office Image -->
                    <div class="card-img-container">
                        {% set officeImages = [
                            asset('images/1stpic.jpg'),
                            asset('images/2ndpic.jpg'),
                            asset('images/3rdpic.jpg')
                        ] %}
                        <img src="{{ officeImages[loop.index0 % officeImages|length] }}"
                             class="card-img-top"
                             alt="Office Image">
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-4 d-flex flex-column">

                        <!-- Job Title -->
                        <h5 class="card-title">{{ job.title }}</h5>

                        <!-- Location + Badge -->
                        <div class="d-flex align-items-center mb-2">
                            <span class="location me-2">
                                <i class="bi bi-geo-alt-fill"></i>
                                {{ job.city }}, {{ job.country }}
                            </span>

                            {% if job.remoteAllowed %}
                                <span class="badge badge-remote">REMOTE</span>
                            {% else %}
                                <span class="badge badge-onsite">ONSITE</span>
                            {% endif %}
                        </div>

                        <!-- Salary -->
                        {% if job.salaryMin and job.salaryMax %}
                            <p class="text-success mb-2">
                                ${{ job.salaryMin|number_format(0, '.', ',') }}
                                -
                                ${{ job.salaryMax|number_format(0, '.', ',') }}
                            </p>
                        {% endif %}

                        <!-- Description -->
                        <p class="description mb-3 flex-grow-1">
                            {{ job.description|slice(0, 100) ~ '...' }}
                        </p>

                        <!-- Apply Button -->
                        <div class="mt-auto">
                            <a href="{{ path('app_jobapplication', {'id': job.id}) }}"
                               class="btn btn-jobstock w-100">
                                <i class="bi bi-send me-1"></i> Apply Now
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        {% endfor %}

    </div>
</div>
</section>

{% endblock %}